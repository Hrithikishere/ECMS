@model Client.Models.User
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">Update Profile</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Update @Model.FirstName's Category</h3>
                </div>
                <div class="card-body">
                    <form action="" method="post">

                        <div class="form-group mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter First Name" value="@Model.FirstName"/>
                            <small>@Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter Last Name" value="@Model.LastName"/>
                            <small>@Html.ValidationMessage("LastName", "", new { @class = "text-danger" })</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email" value="@Model.Email"/>
                            <small>@Html.ValidationMessage("Email", "", new { @class = "text-danger" })</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter Password" value="@Model.Password"/>
                            <small>@Html.ValidationMessage("Password", "", new { @class = "text-danger" })</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Address" class="form-label">Address</label>
                            <textarea class="form-control" id="Address" name="Address" placeholder="Enter Address" rows="5">@Model.Address</textarea>
                            <small>@Html.ValidationMessage("Address", "", new { @class = "text-danger" })</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="Phone" name="Phone" placeholder="Enter Phone Number" value="@Model.Phone"/>
                            <small>@Html.ValidationMessage("Phone", "", new { @class = "text-danger" })</small>
                        </div>
                         
                            <input hidden type="text" class="form-control" id="Role" name="Role" value="@Model.Role"/>
                            <input hidden type="datetime" class="form-control" id="JoinDate" name="JoinDate" value="@Model.JoinDate"/>

                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

