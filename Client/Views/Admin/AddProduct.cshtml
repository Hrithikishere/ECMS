
@{
    ViewBag.Title = "Add New Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center my-4">Add New Product</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Add New Product</h3>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Product Name" />
                            @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            <label for="Specification" class="form-label">Specification</label>
                            <textarea class="form-control" id="Specification" name="Specification" placeholder="Enter Product Specification" rows="3"></textarea>
                            @Html.ValidationMessage("Specification", "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea class="form-control" id="Description" name="Description" placeholder="Enter Product Description" rows="5"></textarea>
                            @Html.ValidationMessage("Description", "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input type="number" class="form-control" id="Price" name="Price" placeholder="Enter Product Price" step="0.01" />
                            @Html.ValidationMessage("Price", "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group mb-3">

                            <label for="CategoryId" class="form-label">Category</label>
                            <select name="CategoryId" class="form-control">
                                <option selected>Select an Category</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select
                            @Html.ValidationMessage("CategoryId", "", new { @class = "text-danger" })

                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
