@model List<Client.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-center my-5">Categories</h2>

            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("AddCategory", "Admin")" class="btn btn-primary">Add New Category</a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>
                                    <a href="@Url.Action("CategoryProducts", "Admin", new { id = category.Id })" class="btn btn-outline-primary btn-sm mr-1">Products</a>
                                    <a href="@Url.Action("UpdateCategory", "Admin", new { id = category.Id })" class="btn btn-outline-warning btn-sm mr-1">Edit</a>
                                    <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })" class="btn btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
