@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mt-5">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to the Dashboard!</h1>
        <p class="lead">This is the place where everything starts.</p>
        <hr class="my-4">
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    Manage Categories
                </div>
                <div class="card-body">
                    <p class="card-text">Add, edit, or delete categories.</p>
                    <a href="@Url.Action("Categories", "Admin")" class="btn btn-outline-primary">Go to Categories</a>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    Manage Products
                </div>
                <div class="card-body">
                    <p class="card-text">Add, edit, or delete products.</p>
                    <a href="@Url.Action("Products", "Admin")" class="btn btn-outline-primary">Go to Products</a>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    Manage Customers
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage user accounts.</p>
                    <a href="@Url.Action("Customers", "Admin")" class="btn btn-outline-primary">Go to Customers</a>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    Manage Orders
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage orders.</p>
                    <a href="@Url.Action("Orders", "Admin")" class="btn btn-outline-primary">Go to Orders</a>

                </div>
            </div>
        </div>
       
    </div>
</div>
