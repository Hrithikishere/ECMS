@model Client.Models.Product

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Product Details</h2>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.Name</h3>
        </div>
        <div class="card-body">
            @* Display the product image if it exists *@
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="text-center mb-3">
                    <img src="/@Model.ImagePath" class="img-fluid" alt="@Model.Name" style="max-height: 400px; max-width: 100%;" />
                </div>
            }
            <p class="card-text"><strong>Specification:</strong> @Model.Specification</p>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            <p class="card-text"><strong>Category:</strong> @Model.Category.Name</p>
            <p class="card-text"><strong>Added Time:</strong> @Model.CreatedTime</p>
            <p class="card-text"><strong>Last Modified:</strong> @Model.ModifiedTime</p>
        </div>
        <div class="card-footer text-right">
            <a href="@Url.Action("Products", "Customer")" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
</div>

